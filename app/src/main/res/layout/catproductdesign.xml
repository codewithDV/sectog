<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.categoriesproduct">

    <ImageView
        android:id="@+id/ivClothCat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/clothingcat" />

    <TextView
        android:id="@+id/tvClothing1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/monsemibold"
        tools:text="Clothing"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintStart_toEndOf="@+id/ivClothCat1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCloItems2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:text="5287 items"
        android:textColor="@color/bluelight"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintStart_toEndOf="@+id/ivClothCat1"
        app:layout_constraintTop_toBottomOf="@+id/tvClothing1" />

    <ImageView
        android:id="@+id/ivcatnext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/nextstep"
        app:layout_constraintBottom_toBottomOf="@+id/tvCloItems2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvClothing1" />


</androidx.constraintlayout.widget.ConstraintLayout>