<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivSubClothingSubCat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="@dimen/_16sdp"
        app:layout_constraintDimensionRatio="h,16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/subclothing" />

    <TextView
        android:id="@+id/tvSubNameSubCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/monsemibold"
        android:gravity="center"
        android:text="Kylie Cropped"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivSubClothingSubCat">

    </TextView>

    <TextView
        android:id="@+id/tvSubProductNamevSubCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/monsemibold"
        android:gravity="center"
        android:text="Urban Outfitters"
        android:textColor="@color/bluelight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSubNameSubCat">

    </TextView>


    <TextView
        android:id="@+id/tvSubPriceSubCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/monsemibold"
        android:gravity="center"
        android:text="$59.00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSubProductNamevSubCat">

    </TextView>

    <TextView
        android:id="@+id/tvSubPrice2SubCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/mon"
        android:gravity="center"
        android:text="$59.00"
        app:layout_constraintStart_toEndOf="@+id/tvSubPriceSubCat"
        app:layout_constraintTop_toBottomOf="@+id/tvSubProductNamevSubCat">

    </TextView>

    <ImageView
        android:id="@+id/ivLikeWhiteSubCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="@+id/ivSubClothingSubCat"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/subclohlike" />

    <ImageView
        android:id="@+id/ivLikeRedSubCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="@+id/ivSubClothingSubCat"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/subclolikered" />
</androidx.constraintlayout.widget.ConstraintLayout>