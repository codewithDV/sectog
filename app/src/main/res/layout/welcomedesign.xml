<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivWAvtar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/avtar2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvVfaboost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/monsemibold"
        android:text="VFA Boost"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintStart_toEndOf="@+id/ivWAvtar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBackPakets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/monsemibold"
        android:text="Backpacks"
        android:textColor="@color/bluelight"
        app:layout_constraintStart_toEndOf="@+id/ivWAvtar"
        app:layout_constraintTop_toBottomOf="@+id/tvVfaboost" />

    <Button
        android:id="@+id/btnDprice"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginEnd="16dp"
        android:text="$53.00"
        android:background="@drawable/purplebutton"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/tvBackPakets"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvVfaboost" />


</androidx.constraintlayout.widget.ConstraintLayout>