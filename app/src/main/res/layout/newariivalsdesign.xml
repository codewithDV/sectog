<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivSubClothingHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/subclothing" />

    <TextView
        android:id="@+id/tvSubNameHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/monsemibold"
        android:gravity="center"
        android:text="Kylie Cropped"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivSubClothingHistory">

    </TextView>

    <TextView
        android:id="@+id/tvSubProductNamevHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/monsemibold"
        android:gravity="center"
        android:text="Urban Outfitters"
        android:textColor="@color/bluelight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSubNameHistory">

    </TextView>

    <TextView
        android:id="@+id/tvSubPriceHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/monsemibold"
        android:gravity="center"
        android:text="$59.00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSubProductNamevHistory">

    </TextView>


    <TextView
        android:id="@+id/tvSubPrice2History"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/mon"
        android:gravity="center"
        android:text="$59.00"
        app:layout_constraintStart_toEndOf="@+id/tvSubPriceHistory"
        app:layout_constraintTop_toBottomOf="@+id/tvSubProductNamevHistory">

    </TextView>

    <ImageView
        android:id="@+id/ivLikeWhiteHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/ivSubClothingHistory"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/subclohlike" />

    <ImageView
        android:id="@+id/ivLikeRedHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/ivSubClothingHistory"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/subclolikered" />
</androidx.constraintlayout.widget.ConstraintLayout>