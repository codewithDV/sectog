<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.sizeguide">




  <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar2"
      android:layout_width="409dp"
      android:layout_height="wrap_content"
      android:background="@color/white"
      android:minHeight="?attr/actionBarSize"
      android:theme="?attr/actionBarTheme"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
  <ImageView
      android:id="@+id/ivBackProfile"
      android:layout_width="44dp"
      android:layout_height="35dp"
      android:layout_marginTop="8dp"
      android:layout_marginStart="12dp"
      app:layout_constraintHorizontal_bias="0.053"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/img_13" />
  <TextView
      android:id="@+id/Filter"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/monmedium"
      android:text="  Size guide"
      android:textSize="22sp"
      app:layout_constraintStart_toStartOf="parent"
      android:paddingTop="12dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent">

  </TextView>

  <ImageView
      android:layout_width="44dp"
      android:layout_height="35dp"
      android:layout_marginTop="4dp"
      android:layout_marginEnd="16dp"
      android:fontFamily="@font/monsemibold"
      android:paddingTop="12dp"
      android:src="@drawable/infofinal"
      android:textSize="22sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintStart_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/toolbar2">
    <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
          android:layout_height="wrap_content"
         android:id="@+id/clchart">

      <TextView
          android:id="@+id/tvGender"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:fontFamily="@font/monsemibold"
          android:text="Gender"
          android:textSize="20dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent">

      </TextView>

      <Spinner
          android:id="@+id/svgender"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@+id/tvGender"
          app:layout_constraintStart_toStartOf="parent"
        android:padding="20dp">

      </Spinner>


      <TextView
          android:id="@+id/tvUs"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="US"
          android:textSize="20sp"
          android:paddingTop="10dp"
          android:paddingStart="30dp"
          android:paddingEnd="30dp"
          android:paddingBottom="10dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toStartOf="@+id/tvUK"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="0.5dp"
          android:background="@drawable/tableshape"
          app:layout_constraintTop_toBottomOf="@+id/svgender"
          app:layout_constraintHorizontal_chainStyle="packed"/>

      <TextView
          android:id="@+id/tvUK"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="UK"
          android:textSize="20sp"
          android:paddingTop="10dp"
          android:paddingStart="30dp"
          android:paddingEnd="30dp"
          android:paddingBottom="10dp"
          android:layout_marginEnd="0.5dp"
          android:background="@drawable/tableshape"
          app:layout_constraintTop_toTopOf="@+id/tvUs"
          app:layout_constraintStart_toEndOf="@+id/tvUs"
          app:layout_constraintEnd_toStartOf="@+id/tvUEU"
          app:layout_constraintTop_toBottomOf="@+id/svgender" />

      <TextView
          android:id="@+id/tvUEU"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="EU"
          app:layout_constraintTop_toTopOf="@+id/tvUK"
          android:paddingTop="10dp"
          android:paddingStart="30dp"
          android:paddingEnd="30dp"
          android:paddingBottom="10dp"
          android:textSize="20sp"
          android:layout_marginEnd="0.5dp"
          android:background="@drawable/tableshape"
          app:layout_constraintEnd_toStartOf="@+id/tvJp"
          app:layout_constraintStart_toEndOf="@+id/tvUK"
          app:layout_constraintTop_toBottomOf="@+id/svgender" />

      <TextView
          android:id="@+id/tvJp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingTop="10dp"
          android:paddingStart="30dp"
          android:paddingEnd="30dp"
          android:paddingBottom="10dp"
          android:text="JP"
          android:textSize="20sp"
          android:background="@drawable/tableshape"
          app:layout_constraintTop_toTopOf="@+id/tvUEU"
          app:layout_constraintStart_toEndOf="@+id/tvUEU"
          app:layout_constraintTop_toBottomOf="@+id/svgender"
          app:layout_constraintEnd_toEndOf="parent"/>

      <androidx.recyclerview.widget.RecyclerView
         android:id="@+id/recycleUS"
          tools:listitem="@layout/sizechartus"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@+id/tvUs"
          app:layout_constraintStart_toStartOf="@+id/tvUs"
          app:layout_constraintEnd_toEndOf="@+id/tvUs"/>

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/recycleUK"
          app:layout_constraintTop_toTopOf="@+id/recycleUS"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          tools:listitem="@layout/sizechartus"
          app:layout_constraintStart_toStartOf="@+id/tvUK"
          app:layout_constraintEnd_toEndOf="@+id/tvUK"
          app:layout_constraintTop_toBottomOf="@+id/tvUK">
      </androidx.recyclerview.widget.RecyclerView>

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/recycleEU"
          app:layout_constraintTop_toTopOf="@id/recycleUK"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          tools:listitem="@layout/sizechartus"
          app:layout_constraintStart_toStartOf="@+id/tvUEU"
          app:layout_constraintEnd_toEndOf="@+id/tvUEU"
          app:layout_constraintTop_toBottomOf="@+id/tvUEU">
      </androidx.recyclerview.widget.RecyclerView>

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/recycleJP"
          app:layout_constraintTop_toTopOf="@id/recycleEU"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          tools:listitem="@layout/sizechartus"
          app:layout_constraintStart_toStartOf="@+id/tvJp"
          app:layout_constraintEnd_toEndOf="@+id/tvJp"
          app:layout_constraintTop_toBottomOf="@+id/tvJp">
      </androidx.recyclerview.widget.RecyclerView>

      <TextView
          android:id="@+id/tvBetween"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
        android:text="In between sizes?"
        app:layout_constraintTop_toBottomOf="@+id/recycleUS"
          app:layout_constraintStart_toStartOf="@+id/recycleUS"
        app:layout_constraintEnd_toEndOf="@+id/recycleJP"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
          android:gravity="center"
        android:fontFamily="@font/monmedium">

      </TextView>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:text="For tight fit, go one size down.For loose fit, go one size up"
        app:layout_constraintTop_toBottomOf="@+id/tvBetween"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textSize="15sp">

      </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>




</ScrollView>



    </androidx.constraintlayout.widget.ConstraintLayout>





